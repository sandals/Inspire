<!DOCTYPE html>
<html>
<head>
  <title>Inspo</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% flash.each do |key, value| %>
		<%= content_tag :div, value, class: "flash #{key}" %>
	<% end %>

	<% if current_user %>
		Hello <%= current_user.username %> | <%= link_to "Logout", logout_path, method: :post %>
	<% else %>
		<%= link_to "Register", new_user_path %> or <%= link_to "Login", new_session_path %>
	<% end %>

<%= yield %>

</body>
</html>
