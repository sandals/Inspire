<% content_for(:title, "Dashboard") -%>
<%= link_to "New collection", new_dashboard_collection_path %>
<hr>
<h2>Collections</h2>
<ul>
	<% @collections.each do |collection| %>
		<li><%= link_to collection.title, [:dashboard, collection] %></li>
	<% end %>
</ul>
<hr>
<div class="cards">
	<% @cards.each do |card| %>
		<div class="card">
			<%= image_tag attachment_url(card, :image, :fill, 300, 300) %>
		</div>
	<% end %>
</div>
